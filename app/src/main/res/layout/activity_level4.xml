<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/housebackground"
    tools:context=".Level4">

    <!-- Skor ve Zaman kutuları -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textScore"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Score: 0"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/score_bg"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Time: 20"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/score_bg"
            android:textColor="#FFFFFF"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Jerry görseli -->
    <ImageView
        android:id="@+id/imageJerry"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/jerry"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:elevation="8dp" />

    <!-- Bonus Jerry görseli -->
    <ImageView
        android:id="@+id/imageBonusJerry"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/bonusjerry"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:visibility="invisible"
        android:elevation="6dp" />

    <!-- Yakala butonu -->
    <ImageView
        android:id="@+id/imageSpike"
        android:layout_width="88dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="5dp"
        android:elevation="6dp"
        android:src="@drawable/spike"
        android:visibility="invisible" />

    <!-- Yakala butonu -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:minWidth="120dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:onClick="startAndStop"
        android:text="YAKALA!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/button_orange_bg"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:elevation="8dp" />

</RelativeLayout>
